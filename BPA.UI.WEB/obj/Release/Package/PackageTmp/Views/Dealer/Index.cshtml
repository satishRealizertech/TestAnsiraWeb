
@{
    Layout = "~/Views/Ansira/index.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <script src="~/script/dealer.js"></script>
    <title>Index</title>
</head>
<body>
    <div class="row">
        <h2 class="text-center" >Dealers</h2>
        <button class="btn btn-primary" data-title="Create" data-toggle="modal" data-target="#create"><span>Create Dealer</span></button>
    </div>
    <br />
    <div class="row">
        <div class="col-md-12">
            <table id="DEALERdatatable" class="table table-striped table-bordered" cellspacing="0" width="100%">
                <thead>
                    <tr>
                        <th>Dealer</th>
                        <th>Dealer URL</th>
                        <th>OEM</th>
                        <th>Backbone</th>
                        <th>Edit</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>

        </div>
    </div>

    <div class="modal fade" id="create" tabindex="-1" role="dialog" aria-labelledby="create" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                    <h4 class="modal-title custom_align" id="Heading">Create DEALER Data</h4>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <input class="form-control" id="txt_Dealer_Name" type="text" placeholder="Dealer Name" />
                    </div>

                    <div class="form-group">
                        <input class="form-control" id="txt_Dealer_Url" type="text" placeholder="Dealer URL" />
                    </div>

        @*Dropdown Here*@
                    <div class="form-group">
                        <select id="dropdownOEMList" class="form-control">
                            <option value="0">Select OEM</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <select id="dropdownBackboneList" class="form-control">
                            <option value="0">Select Backbone</option>
                        </select>
                    </div>

                   
                </div>
                <div class="modal-footer ">
                    <button type="button" onclick="CreateDealerData()" class="btn btn-warning btn-lg" style="width: 100%;"><span class="glyphicon glyphicon-ok-sign"></span>Create</button>
                </div>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>

    <div class="modal fade" id="edit" tabindex="-1" role="dialog" aria-labelledby="edit" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                    <h4 class="modal-title custom_align" id="Heading">Edit Your Detail</h4>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <input class="form-control" id="txt_Dealer_Name_Update" type="text" placeholder="Dealer Name" />
                    </div>

                    <div class="form-group">
                        <input class="form-control" id="txt_Dealer_Url_Update" type="text" placeholder="Dealer URL" />
                    </div>

                    @*Dropdown Here*@
                    <div class="form-group">
                        <select id="dropdownOEMListedt" class="form-control">
                            <option value="0">Select OEM</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <select id="dropdownBackboneListedt" class="form-control">
                            <option value="0">Select Backbone</option>
                        </select>
                    </div>
                   
                    <div>
                        <span id="label_DealerID" hidden></span>
                    </div>
                </div>
                <div class="modal-footer ">
                    <button type="button" onclick="UpdateDealerData()" class="btn btn-warning btn-lg" style="width: 100%;"><span class="glyphicon glyphicon-ok-sign"></span> Update</button>
                </div>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>

    <div class="modal fade" id="delete" tabindex="-1" role="dialog" aria-labelledby="edit" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                    <h4 class="modal-title custom_align" id="Heading">Delete this entry</h4>
                </div>
                <div class="modal-body">
                    <span id="label_DealerID_Delete" hidden></span>
                    <div class="alert alert-danger" id="txt_Dealer_Name_Delete"><span class="glyphicon glyphicon-warning-sign"></span> Are you sure you want to delete this Record?</div>

                </div>
                <div class="modal-footer ">
                    <button type="button" onclick="DeleteDealerData()" class="btn btn-success"><span class="glyphicon glyphicon-ok-sign"></span> Yes</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal"><span class="glyphicon glyphicon-remove"></span> No</button>
                </div>


            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>
</body>
</html>


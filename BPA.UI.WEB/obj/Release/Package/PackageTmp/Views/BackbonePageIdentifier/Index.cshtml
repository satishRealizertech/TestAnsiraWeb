
@{
    Layout = "~/Views/Ansira/index.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <script src="~/script/backbonepageidentifier.js"></script>
    <title>Index</title>
</head>
<body>
    <div class="row">
        <h2 class="text-center">Backbone Page Identifiers</h2>
        <button class="btn btn-primary" data-title="Create" data-toggle="modal" data-target="#create"><span>Create Page Identifier</span></button>
    </div><br />
    <div class="row">
        <div class="col-md-12">
            <table id="backboneidentifierdatatable" class="table table-striped table-bordered" cellspacing="0" width="100%">
                <thead>
                    <tr>
                        <th>Backbone</th>
                        <th>Page</th>
                        <th>Type</th>
                        <th>Identifier</th>
                        <th>Serial No</th>
                        <th>Edit</th>
                        <th>Delete</th>
                    </tr>
                </thead>

            </table>

        </div>
    </div>

    <div class="modal fade" id="create" tabindex="-1" role="dialog" aria-labelledby="create" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                    <h4 class="modal-title custom_align" id="Heading">Create Backbone PageIdentifier</h4>
                </div>
                <div class="modal-body">
                   

                    @*Dropdown Here*@
                    <div class="form-group">
                        <select id="dropdownBackboneIdList" class="form-control">
                            <option value="0">Select Backbone</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <select id="dropdownBackbonePageIdList" class="form-control">
                            <option value="0">Select BackbonePage</option>
                        </select>
                    </div>
                    <div class="form-group">
                       <input class="form-control" id="txt_PageIdentifier_Type" type="text" placeholder="Backbone PageIdentifier Type" />
                    </div>
                    <div class="form-group">
                        <input class="form-control" id="txt_PageIdentifier" type="text" placeholder="Backbone PageIdentifier Identifier" />
                    </div>
                    <div class="form-group">
                        <input class="form-control" id="txt_PageIdentifier_SerialNo" type="text" placeholder="Backbone PageIdentifier Serial No" />
                    </div>
                    <div class="form-group">
                        <input class="form-control" id="txt_PageIdentifier_Value" type="text" placeholder="Backbone PageIdentifier Value" />
                    </div>

                </div>
                <div class="modal-footer ">
                    <button type="button" onclick="CreateBackbonePageElementData()" class="btn btn-warning btn-lg" style="width: 100%;"><span class="glyphicon glyphicon-ok-sign"></span>Create</button>
                </div>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>

    <div class="modal fade" id="edit" tabindex="-1" role="dialog" aria-labelledby="edit" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                    <h4 class="modal-title custom_align" id="Heading">Edit Your Detail</h4>
                </div>
                <div class="modal-body">
                    @*Dropdown Here*@
                    <div class="form-group">
                        <select id="dropdownBackboneIdListEdt" class="form-control">
                            <option value="0">Select Backbone</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <select id="dropdownBackbonePageIdListEdt" class="form-control">
                            <option value="0">Select BackbonePage</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <input class="form-control" id="txt_PageIdentifier_Type_edt" type="text" placeholder="Backbone PageIdentifier Type" />
                    </div>
                    <div class="form-group">
                        <input class="form-control" id="txt_PageIdentifier_edt" type="text" placeholder="Backbone PageIdentifier Identifier" />
                    </div>
                    <div class="form-group">
                        <input class="form-control" id="txt_PageIdentifier_SerialNo_edt" type="text" placeholder="Backbone PageIdentifier Serial No" />
                    </div>
                    <div class="form-group">
                        <input class="form-control" id="txt_PageIdentifier_Value_edt" type="text" placeholder="Backbone PageIdentifier Value" />
                    </div>

                    <div>
                        <span id="label_BackbonePageIdentifierID" hidden></span>
                    </div>
                </div>
                <div class="modal-footer ">
                    <button type="button" onclick="UpdateBackbonePageIdentifierData()" class="btn btn-warning btn-lg" style="width: 100%;"><span class="glyphicon glyphicon-ok-sign"></span> Update</button>
                </div>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>

    <div class="modal fade" id="delete" tabindex="-1" role="dialog" aria-labelledby="edit" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                    <h4 class="modal-title custom_align" id="Heading">Delete this entry</h4>
                </div>
                <div class="modal-body">
                    <span id="label_BackbonePageIdentifierID_Delete" hidden></span>
                    <div class="alert alert-danger" id="txt_BackbonePageElement_Delete"><span class="glyphicon glyphicon-warning-sign"></span> Are you sure you want to delete this Record?</div>

                </div>
                <div class="modal-footer ">
                    <button type="button" onclick="DeletePageIdentifierData()" class="btn btn-success"><span class="glyphicon glyphicon-ok-sign"></span> Yes</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal"><span class="glyphicon glyphicon-remove"></span> No</button>
                </div>


            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>
</body>
</html>

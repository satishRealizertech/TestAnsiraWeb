
@{
    Layout = "~/Views/Ansira/index.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
   
</head>
<body>
    <div class="row">
        <h2 class="text-center">Backbone PageElement Identifiers</h2>
        <button class="btn btn-primary" data-title="Create" data-toggle="modal" data-target="#create"><span>Create Page Element Identifier</span></button>
    </div><br />
    <div class="row">
        <div class="col-md-12">
            <table id="backboneidentifierdatatable" class="table table-striped table-bordered" cellspacing="0" width="100%">
                <thead>
                    <tr>
                        <th>Backbone</th>
                        <th>Page Type</th>
                        <th>Data Element</th>
                        <th>Type</th>
                        <th>Identifier</th>
                        <th>Serial No</th>
                        <th>Edit</th>
                        <th>Delete</th>
                    </tr>
                </thead>

            </table>

        </div>
    </div>

    <div class="modal fade" id="create" tabindex="-1" role="dialog" aria-labelledby="create" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                    <h4 class="modal-title custom_align" id="Heading">Create BackbonePage Element Identifier</h4>
                </div>
                <div class="modal-body">


                    @*Dropdown Here*@
                    <div class="form-group">
                        <select id="dropdownBackbonePageElementId" class="form-control">
                            <option value="">Select BackbonePage</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <select id="dropdownBackbonePageId" class="form-control">
                            <option value="">Select DataElement Name</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <input class="form-control" id="txt_Type_Name" type="text" placeholder="Type" />
                    </div>

                    <div class="form-group">
                        <input class="form-control" id="txt_Identifier" type="text" placeholder="Identifier" />
                    </div>
                    <div class="form-group">
                        <input class="form-control" id="txt_SerialNo" type="text" placeholder="Serial No" />
                    </div>

                    <div class="form-group">
                        <input class="form-control" id="txt_Value" type="text" placeholder="Value" />
                    </div>


                </div>
                <div class="modal-footer ">
                    <button type="button" onclick="CreateBackbonePageElementIdentifier()" class="btn btn-warning btn-lg" style="width: 100%;"><span class="glyphicon glyphicon-ok-sign"></span>Create</button>
                </div>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>

        <div class="modal fade" id="edit" tabindex="-1" role="dialog" aria-labelledby="edit" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                    <h4 class="modal-title custom_align" id="Heading">Edit Your Detail</h4>
                </div>
                <div class="modal-body">
                    @*<div class="form-group">
                            <input class="form-control" id="txt_Dealer_Name_Update" type="text" placeholder="Dealer Name" />
                        </div>

                        <div class="form-group">
                            <input class="form-control" id="txt_Dealer_Url_Update" type="text" placeholder="Dealer URL" />
                        </div>*@

                    @*Dropdown Here*@
                    <div class="form-group">
                        <select id="dropdownBackbonePageElementIdEdt" class="form-control">
                            <option value="0">Select Backbone Page</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <select id="dropdownBackbonePageIdEdt" class="form-control">
                            <option value="0">Select Data Element Name</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <input class="form-control" id="txt_Type_Name_Edt" type="text" placeholder="Type" />
                    </div>

                    <div class="form-group">
                        <input class="form-control" id="txt_Identifier_Edt" type="text" placeholder="Identifier" />
                    </div>
                    <div class="form-group">
                        <input class="form-control" id="txt_SerialNo_Edt" type="text" placeholder="Serial No" />
                    </div>

                    <div class="form-group">
                        <input class="form-control" id="txt_Value_Edt" type="text" placeholder="Value" />
                    </div>

                    <div>
                        <span id="label_BackbonePageElementIdentifierID" hidden></span>
                    </div>
                </div>
                <div class="modal-footer ">
                    <button type="button" onclick="UpdateBackbonePageElementIdentifier()" class="btn btn-warning btn-lg" style="width: 100%;"><span class="glyphicon glyphicon-ok-sign"></span> Update</button>
                </div>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>

    <div class="modal fade" id="delete" tabindex="-1" role="dialog" aria-labelledby="delete" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                    <h4 class="modal-title custom_align" id="Heading">Delete this entry</h4>
                </div>
                <div class="modal-body">
                    <span id="label_BackbonePageElementIdentifierID" hidden></span>
                    <div class="alert alert-danger" id="txt_BackbonePageElement_Delete"><span class="glyphicon glyphicon-warning-sign"></span> Are you sure you want to delete this Record?</div>

                </div>
                <div class="modal-footer ">
                    <button type="button" onclick="DeletePageElementIdentifier()" class="btn btn-success"><span class="glyphicon glyphicon-ok-sign"></span> Yes</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal"><span class="glyphicon glyphicon-remove"></span> No</button>
                </div>


            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>
</body>
</html>
<script src="~/script/backbonepageelementidentifier.js"></script>
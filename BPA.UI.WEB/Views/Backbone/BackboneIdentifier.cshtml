
@{
    Layout = "~/Views/Ansira/index.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>BackboneIdentifier</title>
    <script src="~/script/backboneIdentifier.js"></script>
</head>
<body>
    <div class="container">
        <div class="row">
            <h2 class="text-center">Backbone Identifiers</h2>
            <button class="btn btn-primary" data-title="Create" data-toggle="modal" data-target="#create"><span>Create Backbone Identifier</span></button>
        </div>
        <div class="row" style="margin-top:10px;">
            <div class="col-md-12">
                <table id="BackboneIdentifierDataTable" class="table table-striped table-bordered" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th>Backbone</th>
                            <th>Type</th>
                            <th>Identifier</th>
                            <th>SerialNo</th>
                            <th>Value</th>
                            <th>Edit</th>
                            <th>Delete</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>

            </div>
        </div>

        <div class="modal fade" id="create" tabindex="-1" role="dialog" aria-labelledby="create" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                        <h4 class="modal-title custom_align" id="Heading">Create Backbone Identifier Data</h4>
                    </div>
                    <div class="modal-body">
                        <div class="form-group">
                            <select class="form-control" id="selectBackboneId">
                                <option value="0">Select Backbone Id</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <input class="form-control" id="txtType" type="text" placeholder="Type" />
                        </div>
                        <div class="form-group">
                            <input class="form-control" id="txtIdentifier" type="text" placeholder="Identifier" />
                        </div>
                        <div class="form-group">
                            <input class="form-control" id="txtSerialNo" type="text" placeholder="SerialNo" />
                        </div>
                        <div class="form-group">
                            <input class="form-control" id="txtValue" type="text" placeholder="Value" />
                        </div>
                    </div>
                    <div class="modal-footer ">
                        <button type="button" onclick="createBackboneIdentifier()" class="btn btn-warning btn-lg" style="width: 100%;"><span class="glyphicon glyphicon-ok-sign"></span>Create</button>
                    </div>
                </div>
                <!-- /.modal-content -->
            </div>
            <!-- /.modal-dialog -->
        </div>

        <div class="modal fade" id="edit" tabindex="-1" role="dialog" aria-labelledby="edit" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                        <h4 class="modal-title custom_align" id="Heading">Edit Your Detail</h4>
                    </div>
                    <div class="modal-body">
                        <div class="form-group">
                            <select class="form-control" id="selectedtBackboneId">
                                <option value="0">Select Backbone Id</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <input class="form-control" id="txtedtType" type="text" placeholder="Type" />
                        </div>
                        <div class="form-group">
                            <input class="form-control" id="txtedtIdentifier" type="text" placeholder="Identifier" />
                        </div>
                        <div class="form-group">
                            <input class="form-control" id="txtedtSerialNo" type="text" placeholder="SerialNo" />
                        </div>
                        <div class="form-group">
                            <input class="form-control" id="txtedtValue" type="text" placeholder="Value" />
                        </div>
                        <div>
                            <span id="lableBackboneIdentifierId" hidden></span>
                        </div>
                    </div>
                    <div class="modal-footer ">
                        <button type="button" onclick="updateBackboneIdentifier()" class="btn btn-warning btn-lg" style="width: 100%;"><span class="glyphicon glyphicon-ok-sign"></span> Update</button>
                    </div>
                </div>
                <!-- /.modal-content -->
            </div>
            <!-- /.modal-dialog -->
        </div>

        <div class="modal fade" id="delete" tabindex="-1" role="dialog" aria-labelledby="edit" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                        <h4 class="modal-title custom_align" id="Heading">Delete this entry</h4>
                    </div>
                    <div class="modal-body">
                        <span id="labledeleteBackboneIdentifierId" hidden></span>
                        <div class="alert alert-danger"><span class="glyphicon glyphicon-warning-sign"></span> Are you sure you want to delete this Record?</div>

                    </div>
                    <div class="modal-footer ">
                        <button type="button" onclick="deleteBackboneIdentifier()" class="btn btn-success"><span class="glyphicon glyphicon-ok-sign"></span> Yes</button>
                        <button type="button" class="btn btn-default" data-dismiss="modal"><span class="glyphicon glyphicon-remove"></span> No</button>
                    </div>


                </div>
                <!-- /.modal-content -->
            </div>
            <!-- /.modal-dialog -->
        </div> 
    </div>
</body>
</html>
